.wrapper
  = render 'shared/chat-side'
  .chat-main
    .header
      .header__left-box
        .header__left-box--group-name
          test-group
        .header__left-box--members
          member1,
          member2
      = link_to edit_group_path(1) do
        .header__btn--edit-group
          Edit
    .contents
      = render @messages
    .footer
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'image', class: 'icon'
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'